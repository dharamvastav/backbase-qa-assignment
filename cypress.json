{
  "testFiles": "**/*/*.*",
  "viewportWidth": 1600,
  "viewportHeight": 1200,
  "baseUrl": "https://qa-task.backbasecloud.com",
  "browser": "firefox",
  "screenshotOnRunFailure": true,
  "reporter": "cypress-multi-reporters",
  "reporterOptions": {
    "reporterEnabled": "mochawesome",
    "mochawesomeReporterOptions": {
      "reportDir": "cypress/reports/mocha",
      "quite": true,
      "overwrite": false,
      "html": false,
      "json": true
    }
  }
}
